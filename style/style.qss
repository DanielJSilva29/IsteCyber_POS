QWidget {
    background-color: #222;
    color: #eee;
    font-size: 14px;
}

QFrame#loginCard, QFrame#registerCard, QFrame#recoverCard {
    background-color: #2a2a2a;
    border-radius: 12px;
    border: 1px solid #444;
}

QLineEdit, QComboBox {
    background-color: #333;
    border: 1px solid #555;
    padding: 4px 6px;
    border-radius: 4px;
}

QListWidget {
    background-color: #2a2a2a;
    border: 1px solid #555;
}

QLabel {
    color: #eee;
}
